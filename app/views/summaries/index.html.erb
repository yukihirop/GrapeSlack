<h1>まとめ</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @summaries.each do |summary| %>
      <tr>
        <td><%= summary.title %></td>
        <td><%= summary.user.name %></td>
        <td><%= link_to '表示', summary %></td>
        <td><%= link_to '削除', summary, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        <td><%= link_to '追加', new_summary_content_path(summary.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<ul>
  <li><%= link_to 'まとめ作成', new_summary_path %></li>
  <li><%= link_to 'ログアウト', destroy_user_session_path , method: :delete %></li>
</ul>

