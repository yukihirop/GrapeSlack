<div class="col-md-10">
  <h3><strong><%= t('user.summaries.title') %></strong></h3>
</div>
<div class="col-md-2" style="margin-left:auto;">
  <%= link_to 'まとめ作成', new_summary_path, {
      :class => 'btn btn-sm btn-primary',
      :style => 'color:white;'} %>
</div>

<table class="table table-striped table-responsive table-hover summaries">
  <thead>
    <tr>
      <th><%= t('user.summaries.tables.row_1') %></th>
      <th><%= '個数'%></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @summaries.each do |summary| %>
      <tr>
        <td><%= link_to summary.title, summary_path(summary) %></td>
        <td><%= summary.contents.size %></td>
        <td><%= link_to '追加', new_summary_content_path(summary.id), {
            :class => 'btn btn-info btn-sm'
        } %></td>
        <td><%= link_to '削除', summary, {
            :class => 'btn btn-danger btn-sm',
            :style => 'color:white;',
            :method => :delete,
            :data => { confirm: '本当に削除しますか?' }
        } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

